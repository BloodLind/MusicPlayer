<UserControl
    x:Class="MusicPlayer.WPF.Controls.SearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicPlayer.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="35"
    d:DesignWidth="140"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource PrimaryMidColor}"
        BorderThickness="0"
        CornerRadius="5">
        <DockPanel>
            <Button
                Margin="10,0,0,0"
                Padding="0"
                VerticalAlignment="Center"
                Style="{DynamicResource MaterialDesignFlatButton}">
                <Image
                    Width="20"
                    Height="20"
                    Opacity="0.8"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="{DynamicResource Search}" />
            </Button>
            <TextBox
                Margin="5"
                Foreground="{DynamicResource ForegroundLightColor}"
                Style="{DynamicResource MaterialDesignTextBox}"
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
    </Border>
</UserControl>
